<div class="modal fade" id="centralModalSm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    <!-- Change class .modal-sm to change the size of the modal -->
    <div class="modal-dialog modal-lg" role="document">

      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title w-100" id="myModalLabel">Easy Calculator</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container">
            <form>
              <div class="form-row">
                <div class="col-7">
                  <p>Item Weight <br/> Weight is required for accurate calculatations.
                  </p>
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="Weight">
                </div>
              </div>

              <div class="form-row">
                <div class="col-7">
                  <p>Item Sizes <br/>Enter the size of the item. This will be used to determine package type.
                  </p>
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="Length">
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="Width">
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="Height">
                </div>
              </div>
            </form>

            <div class="container text-center">
               <%= image_tag("dimension2.gif") %>
            </div>

          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary btn-sm">Calculate</button>
        </div>
      </div>
    </div>
  </div>
